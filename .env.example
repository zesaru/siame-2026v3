# SIAME 2026v3 - Variables de Entorno
# Sistema Inteligente de Administración y Manejo de Expedientes
# Ministerio de Asuntos Exteriores, Unión Europea y Cooperación

# ================================
# CONFIGURACIÓN GENERAL
# ================================
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# ================================
# BASE DE DATOS
# ================================
DATABASE_URL="postgresql://siame_user:siame_password@localhost:5432/siame_dev"
POSTGRES_DB=siame_dev
POSTGRES_USER=siame_user
POSTGRES_PASSWORD=siame_password

# ================================
# NEXTAUTH CONFIGURACIÓN
# ================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="tu-secret-muy-seguro-cambiame-en-produccion"

# ================================
# REDIS CONFIGURACIÓN
# ================================
REDIS_URL="redis://:siame_redis_password@localhost:6379"
REDIS_PASSWORD=siame_redis_password

# ================================
# ORQUESTADOR CONFIGURACIÓN
# ================================
ORCHESTRATOR_HOST=localhost
ORCHESTRATOR_PORT=8000
ORCHESTRATOR_URL="http://localhost:8000"
COORDINATION_INTERVAL=5
AGENT_HEARTBEAT_TIMEOUT=30
TASK_CLEANUP_THRESHOLD_HOURS=24

# ================================
# AZURE SERVICIOS
# ================================
AZURE_TENANT_ID="tu-tenant-id"
AZURE_CLIENT_ID="tu-client-id"
AZURE_CLIENT_SECRET="tu-client-secret"

# Azure Form Recognizer
AZURE_FORM_RECOGNIZER_ENDPOINT="https://tu-form-recognizer.cognitiveservices.azure.com/"
AZURE_FORM_RECOGNIZER_KEY="tu-api-key"

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=tu-storage;AccountKey=tu-key;EndpointSuffix=core.windows.net"
AZURE_STORAGE_CONTAINER_NAME="siame-documents"

# Azure Key Vault
AZURE_KEY_VAULT_URL="https://tu-keyvault.vault.azure.net/"

# Azure Cognitive Services
AZURE_COGNITIVE_SERVICES_ENDPOINT="https://tu-cognitive.cognitiveservices.azure.com/"
AZURE_COGNITIVE_SERVICES_KEY="tu-cognitive-key"

# ================================
# SEGURIDAD Y ENCRIPTACIÓN
# ================================
ENCRYPTION_KEY="tu-encryption-key-32-caracteres"
JWT_SECRET="tu-jwt-secret-muy-seguro"
SESSION_SECRET="tu-session-secret"

# Configuración de seguridad
SECURITY_LEVEL=ENS_ALTO
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION=true
ENABLE_WATERMARKING=true

# ================================
# CORS Y DOMINIOS PERMITIDOS
# ================================
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"
ALLOWED_DOMAINS="localhost,*.maeuec.es,*.exteriores.gob.es"

# ================================
# MONITOREO Y OBSERVABILIDAD
# ================================
PROMETHEUS_ENDPOINT="http://localhost:9090"
GRAFANA_ENDPOINT="http://localhost:3001"
GRAFANA_ADMIN_PASSWORD=siame_grafana_password

# Logging
LOG_FORMAT=json
LOG_FILE_PATH="./logs/siame.log"
ENABLE_ACCESS_LOGS=true

# ================================
# NOTIFICACIONES Y COMUNICACIONES
# ================================

# Email (SMTP)
SMTP_HOST="smtp.maeuec.es"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="siame@maeuec.es"
SMTP_PASSWORD="tu-smtp-password"
SMTP_FROM_NAME="SIAME 2026v3"
SMTP_FROM_EMAIL="siame@maeuec.es"

# WebSockets
WEBSOCKET_PORT=3001
WEBSOCKET_PATH="/ws"

# ================================
# ARCHIVOS Y ALMACENAMIENTO
# ================================
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES="pdf,doc,docx,jpg,jpeg,png,tiff"
UPLOAD_DIRECTORY="./uploads"
TEMP_DIRECTORY="./temp"

# ================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ================================
# Descomentar y configurar para producción

# SSL/TLS
# SSL_CERT_PATH="/path/to/cert.pem"
# SSL_KEY_PATH="/path/to/key.pem"
# FORCE_HTTPS=true

# Clustering
# CLUSTER_MODE=true
# CLUSTER_WORKERS=4

# Performance
# CACHE_TTL=3600
# MAX_CONNECTIONS=100
# REQUEST_TIMEOUT=30000

# ================================
# CONFIGURACIÓN DE DESARROLLO
# ================================
# Solo para desarrollo local

# Debug
DEBUG_MODE=true
ENABLE_HOT_RELOAD=true
SHOW_STACK_TRACES=true

# Testing
TEST_DATABASE_URL="postgresql://siame_user:siame_password@localhost:5432/siame_test"
RUN_MIGRATIONS_ON_START=true

# Mock Services
MOCK_AZURE_SERVICES=false
MOCK_EMAIL_SERVICE=true

# ================================
# AGENTES CONFIGURACIÓN
# ================================

# Document Processor Agent
AGENT_DOCUMENT_PROCESSOR_ENABLED=true
AGENT_DOCUMENT_PROCESSOR_MAX_CONCURRENT_TASKS=5

# Database Manager Agent
AGENT_DATABASE_MANAGER_ENABLED=true
AGENT_DATABASE_MANAGER_CONNECTION_POOL_SIZE=10

# Azure Specialist Agent
AGENT_AZURE_SPECIALIST_ENABLED=true
AGENT_AZURE_SPECIALIST_RETRY_ATTEMPTS=3

# Security Guardian Agent
AGENT_SECURITY_GUARDIAN_ENABLED=true
AGENT_SECURITY_GUARDIAN_SCAN_INTERVAL=300

# Workflow Manager Agent
AGENT_WORKFLOW_MANAGER_ENABLED=true
AGENT_WORKFLOW_MANAGER_MAX_PARALLEL_WORKFLOWS=10

# Communication Hub Agent
AGENT_COMMUNICATION_HUB_ENABLED=true
AGENT_COMMUNICATION_HUB_NOTIFICATION_BATCH_SIZE=50

# Quality Assurance Agent
AGENT_QUALITY_ASSURANCE_ENABLED=true
AGENT_QUALITY_ASSURANCE_TEST_INTERVAL=3600

# ================================
# CONFIGURACIÓN DIPLOMÁTICA
# ================================
DEFAULT_EMBASSY="Embajada de España"
DEFAULT_DEPARTMENT="Asuntos Políticos"
DEFAULT_DOCUMENT_CLASSIFICATION=RESTRINGIDO

# Configuración de roles
ENABLE_ROLE_INHERITANCE=true
ENABLE_TEMPORARY_CLEARANCE=false

# Configuración de documentos
AUTO_CLASSIFY_DOCUMENTS=true
REQUIRE_DIGITAL_SIGNATURE=true
ENABLE_DOCUMENT_VERSIONING=true

# ================================
# CUMPLIMIENTO Y NORMATIVAS
# ================================
COMPLIANCE_ENS_ALTO=true
COMPLIANCE_ISO27001=true
COMPLIANCE_GDPR=true
COMPLIANCE_CCN_CERT=true

# Auditoría
AUDIT_RETENTION_DAYS=2555  # 7 años
AUDIT_LOG_ALL_ACTIONS=true
AUDIT_INCLUDE_SENSITIVE_DATA=false

# Backup y recuperación
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION=true