      "program": "${workspaceFolder}/src/frontend/node_modules/.bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/src/frontend",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "1"
      },
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "ready - started server on .+, url: (https?:\\/\\/.+)",
        "uriFormat": "%s"
      }
    },
    {
      "name": "üß™ Debug Jest Tests (Frontend)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/frontend/node_modules/.bin/jest",
      "args": ["--runInBand", "--no-cache"],
      "cwd": "${workspaceFolder}/src/frontend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üî¨ Debug PyTest (Backend)",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${workspaceFolder}/src/backend/tests",
        "-v",
        "--tb=short"
      ],
      "cwd": "${workspaceFolder}/src/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src/backend",
        "TESTING": "true"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "üöÄ Debug Full System (Attach)",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/src/backend",
          "remoteRoot": "/app"
        }
      ]
    },
